@model IEnumerable<MVC_Store.Models.ViewModels.Shop.CategoryVM>

<h4 style="color:white">Категорії</h4>
<hr style="margin-right: 0" class="bg-dark">
<ul class="nav nav-pills flex-column mb-auto">
    @foreach (var item in Model)
    {
        <li>
            <a style="margin-bottom: 10px;" class="nav-link link-dark list-group-item list-group-item-action" href="/shop/category/@item.Slug.ToLower()">@item.Name</a>
        </li>
    }
</ul>
<hr style="margin-right: 0" class="bg-dark">
<div class="dropdown nav nav-pills flex-column">
    <a href="#" style="font-size:20px" class="text-white">Instagram</a>
    <a href="#" style="font-size:20px" class="text-white">Facebook</a>
</div>

